.flip {
  -webkit-perspective: 800;
  width: 500px;
  height: 500px;
  border-radius: 3px;
  position: relative;
  margin: 0 auto;
}
.flip .card.flipped {
  -webkit-transform: rotateY(-180deg);
}
.flip .card {
  width: 100%;
  height: 100%;
  -webkit-transform-style: preserve-3d;
  -webkit-transition: 0.5s;
  position: relative;
}
.flip .card .face {
  width: 100%;
  height: 100%;
  position: absolute;
  -webkit-backface-visibility: hidden;
  z-index: 2;
  text-align: center;
  display: table;
  p {
    display: table-cell;
    vertical-align: middle;
    font-size: 2em;
  }
}
.flip .card .front {
  position: absolute;
  z-index: 1;
  border-radius: 3px;
  background: $darkblue;
  color: white;
  font-weight: 800;
  cursor: pointer;
}
.flip .card .back {
  -webkit-transform: rotateY(-180deg);
  background: white;
  color: $pink;
  font-weight: 800;
  border-radius: 3px;
  cursor: pointer;
}

.directions {
  height: 520px;
  padding: 15px;
  line-height: 520px;
  flex:1;
  color: white;
  font-size: 3em;
  cursor:pointer;
}

