// COLOR ================
$blue: #0000ff;
$darkblue: #2e3192;
$pink: #ff00ff;
$slate: #4d4d4d;
$light: #f2f2f2;

.blue {color: $blue;}
.darkblue {color: $darkblue;}
.pink2 {color: $pink;}
.slate {color: $slate;}
.white {color: white;}
.light {color: $light; }

body {
  font-family: 'Raleway', sans-serif;
  background-color: $light;
  background-image: url(<%= asset_data_uri 'noisePattern.png' %>);
  background-repeat: repeat;
  background-blend-mode: multiply;
  box-sizing: border-box;
}

a {color: inherit;}
a:hover {
  -webkit-transition: 0.2s ease-out;
  -moz-transition: 0.2s ease-out;
  transition: 0.2s ease-out;
}

// TYPOGRAPHY ===================
h1, h2, h3, h4, h5, h6 {
  font-weight: 800;
  margin: 0;
}

.em {
  font-style: italic;
}

p {
  font-weight: 600;
  font-size: 1.2em;
}

h1 {font-size: 3em;}
h2 {font-size: 2.5em;}
h3 {font-size: 2em;}
h4 {font-size: 1.8em;}
h5 {font-size: 1.5em;}
h6 {font-size: 1.3em;}

a, a:hover, a:active {text-decoration: none;}

