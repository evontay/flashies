<!-- // FORM FOR NEW CARD -->

<div class="form-wrap">

  <div id="cancel" class="darkblue">
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  </div>

  <h5 class="darkblue bottompad">Create a flash card</h5>
  <%= simple_form_for ([@deck, @card]), html: { multipart: true } do |f| %>
    <% if @card.errors.any? %>
      <div id="errors">
        <h2>
          <%= pluralize(@card.errors.count, "error") %>
          prevented this card from saving
        </h2>
        <ul>
          <% @card.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :prompt_text, input_html: { class: 'form-control' } %>
    </div>
    <!-- <div class="form-group">
      <%= f.input :prompt_image, input_html: { class: 'form-control' } %>
    </div> -->
    <!-- <div class="form-group">
      <%= f.input :prompt_audio, input_html: { class: 'form-control' } %>
    </div> -->
    <div class="form-group">
      <%= f.input :answer, input_html: { class: 'form-control' } %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
