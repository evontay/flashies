<div class="flash">
  <%= render "layouts/navbar2" %>
  <div class="wrapper">
    <%= link_to "Back", decks_path, { class: 'right' } %>
    <h5 class="toppad">By <%= @deck.user.username %></h5>
    <h1><%= @deck.title %></h1>
    <p><%= @deck.description %></p>

    <%= render 'cards/form' %>

    <h2>Cards</h2>
    <%= link_to "Add a card", new_deck_card_path(@deck.id), { class: 'add_btn' }  %>

      <% @deck.cards.each do |card| %>
      <div class="card">
        <div class="front">
          <h3><%= card.prompt_text %></h3>
        </div>
        <div class="back">
          <p><%= card.answer %></p>
        </div>
        <%= link_to "Edit this card", edit_deck_card_path(@deck.id, card.id) %>
        <%= link_to "Delete this card", deck_card_path(@deck.id, card.id), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
      <% end %>




    <%= link_to "Edit Deck", edit_deck_path %>
    <%= link_to "Delete this deck", deck_path, method: :delete, data: {confirm: "Are you sure?"} %>

  </div>
</div>
